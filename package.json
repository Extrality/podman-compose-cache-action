{
  "name": "docker-compose-cache-action",
  "version": "1.8.0",
  "description": "Dynamically caches Docker images defined in a docker-compose.yml file using TypeScript.",
  "keywords": [
    "github",
    "actions",
    "docker",
    "docker-compose",
    "cache"
  ],
  "homepage": "https://github.com/seijikohara/docker-compose-cache-action#readme",
  "bugs": {
    "url": "https://github.com/seijikohara/docker-compose-cache-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seijikohara/docker-compose-cache-action.git"
  },
  "license": "MIT",
  "author": "Seiji Kohara <sage.0118@gmail.com> (https://github.com/seijikohara)",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "package": "npm run clean && ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write . && prettier --write \"**/*.{yaml,yml,md}\" --ignore-unknown",
    "format:check": "biome format . && prettier --check \"**/*.{yaml,yml,md}\" --ignore-unknown",
    "check": "biome check .",
    "fix": "biome check --write . && prettier --write \"**/*.{yaml,yml,md}\" --ignore-unknown",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "lefthook install",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:check": "npx npm-check-updates"
  },
  "dependencies": {
    "@actions/cache": "^5.0.1",
    "@actions/core": "^2.0.1",
    "@actions/exec": "^2.0.0",
    "date-fns": "^4.1.0",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@evilmartians/lefthook": "^2.0.15",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.9",
    "@vercel/ncc": "^0.38.4",
    "jest": "^30.2.0",
    "prettier": "^3.8.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
